<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Foodzfame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cherry+Swash:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="myNav">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style=" top: 0%;">Foodzfame</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recipe" asp-action="Index">Recipe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
                    </li>
                    <li class="nav-item" id="navCategory">
                        <a class="nav-link" asp-controller="Category" asp-action="Index">Category</a>
                    </li>
                    <li class="nav-item" style="padding-right: 0%;">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item" style="padding-right: 0%;">
                        <table style="float:right">
                            <tr>
                                <td>
                                    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Recipes.." title="Type in a Recipe Name">

                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <ul id="myUL">
                                    </ul>
                                </td>
                            </tr>
                        </table>

                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()

    <div class="row footer">
        <div class="container">
            <div class="row" style="font-size:13px; padding-top: 5%; padding-bottom: 2%;line-height: 25px;">
                <div class="col-sm-4 ">
                    <h6> <b>About Foodzfame</b></h6>
                    <br />
                    <p style=" white-space: break-spaces;">Foodsfame is a food blog containing recipes, tips, tricks for cooking and also blogs (which contains health benefits, Nutrional facts, diabetic information of foods etc.) </p>
                </div>
                <div class="col-sm-4 ">
                    <h6><b>Important Links</b></h6>
                    <br />
                    <a style="color:white;" asp-controller="Recipe" asp-action="Index">Recipes</a><br />
                    <a style="color:white;"  asp-controller="Category">Category</a><br />
                    <a style="color:white;"  asp-controller="Blog">Blogs</a>
                </div>
                <div class="col-sm-4">
                    <h6><b>Contact Us</b></h6>
                    <span style=" white-space: break-spaces;">
                        <i class="fa fa-mobile" style="        margin-right: 10px;
        float: left;
        font-size: 150%;
" aria-hidden="true"></i> <a style="color:white;" href="tel:+916361065953" class="float-left">+91-6361065953 </a><br />
                        <i class="fa fa-envelope" style="        margin-right: 10px;
        float: left;
"  aria-hidden="true"></i> <a style="color:white;" href="mailto:info@foodzfame.com" class="float-left">info@foodzfame.com</a>
                    </span>

                </div>
            </div>
            <div class="row border-top">
                Copyright 	&copy; 2021 foodzfame, all rights reserved.
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
