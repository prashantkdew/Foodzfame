@model Foodzfame2.Models.GalleryModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add Gallery";
}

<div class="row defaultHeader">
    <div class="overlay">
        <div class="container">
            <div class="recipeTitle">
                Image Gallery
            </div>
        </div>
    </div>
</div>
<div class="marTop2pr"></div>
<form asp-action="AddGallery" method="post"  enctype="multipart/form-data">
    <table>
        <tr>
            <td><label asp-for="Title"></label></td>
            <td><input asp-for="Title" /></td>
        </tr>
        <tr>
            @{ 
                var dishlst= (List<SelectListItem>)(ViewBag.Dishes);
            }
            <td><label asp-for="DishId">Dish</label></td>
            <td><select asp-for="DishId" asp-items="dishlst"></select></td>
        </tr>
        <tr>
            <td><label asp-for="Image"></label></td>
            <td><input asp-for="Image" /></td>
        </tr>
    </table>
    <input type="submit" class="btn btn-success" />
</form>